    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "sanitize-html": "^2.5.1",
    "styled-components": "^5.3.1",
    "styled-normalize": "^8.0.7",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.37",
    "winston": "^3.3.3"
  },
